<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="uk.ac.uhi.it.ContentHostingHandlerImplFedora"
			  class="org.sakaiproject.content.chh.fedora.ContentHostingHandlerImplFedora"
			  singleton="true">
			  
	  <property name="contentHostingHandlerResolver" >
	    <ref bean="org.sakaiproject.content.api.ContentHostingHandlerResolver"/>
	  </property>

    <property name="repoFactory" >
      <ref bean="uk.ac.uhi.ral.impl.FedoraDigitalRepositoryFactory"/>
    </property>
	
  </bean>

  <bean id="uk.ac.uhi.ral.impl.FedoraDigitalRepositoryFactory"
        class="uk.ac.uhi.ral.impl.FedoraDigitalRepositoryFactory">
    <property name="truststorePath"><value>TEST</value></property>
    <property name="truststorePassword"><value>TEST</value></property>
  </bean>

</beans>
